<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.GioHangActivity">
    <RelativeLayout
        android:id="@+id/rlGiohang"
        android:layout_above="@+id/bottom"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/lvGioHang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F4F4F4" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp">
            <TextView
                android:id="@+id/tvGioHAngTrong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Không có sản phẩm nào"
                android:textSize="25dp"
                android:visibility="invisible" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
        android:id="@+id/tvTongTien"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:textColor="#EC1109"
        android:gravity="center|right"/>
        <CheckBox
            android:id="@+id/cbThanhtoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thanh toán bằng thẻ"/>
        <Button
            android:id="@+id/btThanhtoan"
            android:text="Thanh toán"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/square_bg"/>
    </LinearLayout>
</RelativeLayout>